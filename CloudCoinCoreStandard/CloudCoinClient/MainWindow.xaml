                    <uc1:Led x:Name="raida2111" MaxWidth="25" MaxHeight="25" Margin="5" Flashing="False" FlashingPeriod="500" ColorNull="Gray" ColorOn="Green" ColorOff="Red"  />
                    <uc1:Led x:Name="raida2211" MaxWidth="25" MaxHeight="25" Margin="5" Flashing="False" FlashingPeriod="500" ColorNull="Gray" ColorOn="Green" ColorOff="Red"  />
                    <uc1:Led x:Name="raida2311" MaxWidth="25" MaxHeight="25" Margin="5" Flashing="False" FlashingPeriod="500" ColorNull="Gray" ColorOn="Green" ColorOff="Red"  />
                    <uc1:Led x:Name="raida2411" MaxWidth="25" MaxHeight="25" Margin="5" Flashing="False" FlashingPeriod="500" ColorNull="Gray" ColorOn="Green" ColorOff="Red"  />
                    <uc1:Led x:Name="raida2511" MaxWidth="25" MaxHeight="25" Margin="5" Flashing="False" FlashingPeriod="500" ColorNull="Gray" ColorOn="Green" ColorOff="Red"  />
                </StackPanel>

            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Ready Nodes :"/>
                <Label x:Name="lblReady"/>
                <Label Content="NotReady Nodes :"/>
                <Label x:Name="lblNotReady"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="cmdShow" Content="Show Status" Click="cmdShow_Click" Width="200"></Button>
                <Button x:Name="cmdEcho" Content="Echo" Click="cmdEcho_Click" Width="200"></Button>
                <Button x:Name="cmdDetect" Content="Detect" Click="cmdDetect_Click" Width="200" Visibility="Collapsed"></Button>
                <Button x:Name="cmdMultiDetect" Content="Import" Click="cmdMultiDetect_Click" Width="200"></Button>
            </StackPanel>

            <Label x:Name="lblProgress" Margin="10,10" Content="Progress Status : "></Label>
            <ProgressBar x:Name="bar1" Value ="0"  Maximum="100" Margin="10,10"></ProgressBar>
            <ProgressBar x:Name="bar2" Value="0" Maximum="100" Margin="10,10"></ProgressBar>
           

        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0">
            <TextBox VerticalScrollBarVisibility="Visible" x:Name="txtProgress" Text="" TextChanged="txtProgress_TextChanged" Height="400" Margin="10,20"></TextBox>
            
        </StackPanel>
    </Grid>
</Window>
