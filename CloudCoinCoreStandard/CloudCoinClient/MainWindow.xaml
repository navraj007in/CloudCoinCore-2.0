                            <uc1:Led x:Name="raida25" MaxWidth="25" MaxHeight="25" Margin="5" Flashing="False" FlashingPeriod="500" ColorNull="Gray" ColorOn="Green" ColorOff="Red"  />
                        </StackPanel>

                    </StackPanel>
                </Border>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal" >

                    <StackPanel>
                        <Button HorizontalAlignment="Right" Width="200" Height="50" DockPanel.Dock="Right">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#22DF9F"/>
                                    <Setter Property="Foreground">
                                        <Setter.Value>
                                            #FFFFFF
                                        </Setter.Value>
                                    </Setter>

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="{StaticResource CornerRadius.RoundBottom}" BorderThickness="2" BorderBrush="#69ff93">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#33DF9F"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="₡170.55" FontSize="28" x:Name="lblNotesTotal"   VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <TextBlock TextAlignment="Center" FontFamily="Resources/#RalewayBold" Foreground="#a49afe" Margin="0,13,0,0" FontSize="16">Total In Bank</TextBlock>
                    </StackPanel>
                </StackPanel>

            </DockPanel>
        </Border>
        <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="1" >
            <StackPanel Orientation="Horizontal" Margin="45,0,45,0" >
                <StackPanel Orientation="Horizontal">

